/* components/w-tab-control/w-tab-control.wxss */
.container {
  display: flex;
  height: 88rpx;
  line-height: 88rpx;
  background: orange;
}
.tab-item {
  flex: 1;
  text-align: center;
}
.active {
  color: red;
}
.active text {
  padding: 20rpx 10rpx;
  border-bottom: 6rpx solid red;
  transition: 0.5s ease;
}