<!--pages/text/text.wxml-->
<text>pages/text/text.wxml</text>
<!-- 1.基本使用(行内元素 即不会换行) -->
<text>你好\n</text>
<text>俊仔\n</text>

<!-- 2.默认情况下text中的文本长按是不能选中的 -->
<text selectable='{{true}}'>Hello World\n</text>
<text selectable>Coderwhy\n</text>

<!-- 3.space:决定文本空格的大小 -->
<!-- ensp:半个中文字符大小 -->
<!-- emsp:一个中文字符大小 -->
<text space='nbsp'>俊仔 Coderwhy\n</text>
<text space='ensp'>俊仔 Coderwhy\n</text>
<text space='emsp'>俊仔 Coderwhy\n</text>

<!-- 4.decode属性：是否解码 -->
<text decode>5 &gt; 3</text>